<Window x:Class="AtmFrontEndWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ATM CONTROL PANEL (WPF)" Height="450" Width="800">

    <StackPanel Margin="20">

        <Label Content="ATM SYSTEM MONITOR" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>

        <Button Name="btnInit" Content="1. Start System" Height="40" Margin="0,10,0,0" Click="btnInit_Click"/>

        <Button Name="btnTest" Content="2. Test Device &amp; Transaksi" Height="40" Margin="0,5,0,20" Click="btnTest_Click"/>

        <Label Content="System Log:" FontWeight="Bold"/>

        <ListBox Name="lstLog" Height="200" Background="Black" Foreground="#00FF00" FontFamily="Consolas" FontSize="14"/>

    </StackPanel>
</Window>